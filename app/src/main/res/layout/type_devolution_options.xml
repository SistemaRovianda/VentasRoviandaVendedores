<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Selecciona un tipo de devoluciÃ³n"
            android:textColor="#07CA0F"
            android:textSize="20sp" />

        <Button
            android:id="@+id/goodStateButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Buen estado"
            android:textAllCaps="false"
            app:backgroundTint="#1C681F" />

        <Button
            android:id="@+id/badStateButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Mal estado"
            android:textAllCaps="false"
            app:backgroundTint="#F45454" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>