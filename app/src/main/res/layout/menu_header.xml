<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"  android:layout_width="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0B0A0A"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Usuario: almacen 1"
                        android:textColor="#227DC5"
                        android:textSize="18sp" />
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vidaloka"
                android:text="ROVIANDA"
                android:textColor="#23C62A"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/printerButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#0B0A0A"
                app:srcCompat="@drawable/printer_icon"
                app:tint="#BDB5B5"
                tools:ignore="VectorDrawableCompat" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/loginLoadingSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/downloadChanges"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_download_black_24dp"
                app:tint="#2FBF34" />

            <ImageView
                android:id="@+id/uploadChanges"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_publish_black_24dp"
                app:tint="#2FBF34" />

            <TextView
                android:id="@+id/eat_time_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/vidaloka"
                android:text="Hora de comida"
                android:textColor="#28BF2E"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/end_day_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/vidaloka"
                android:text="Terminar día"
                android:textColor="#28BF2E"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Logout_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/vidaloka"
                android:gravity="right"
                android:text="Cerrar sesión"
                android:textColor="#28BF2E"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>